<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/user_avatar_on_list"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/user_name_on_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/nama_lengkap_user"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar_on_list"
            app:layout_constraintStart_toEndOf="@id/user_avatar_on_list"
            app:layout_constraintTop_toTopOf="@id/user_avatar_on_list"
            app:layout_constraintVertical_bias="0.348" />

        <TextView
            android:id="@+id/nama_lengkap_on_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/user_avatar_on_list"
            app:layout_constraintTop_toTopOf="@id/user_name_on_list"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar_on_list"
            android:text="@string/github_username"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>